{
    "compilerOptions": {
        "target": "es6",
        "lib":["es2016"],
        "rootDir":"src",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "types":["node"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
    ]
}